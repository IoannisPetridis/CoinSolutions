<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="salamantex.coinsolutions.RegisterPage">


    <TextView
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="75dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Name:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/name_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/description_text"
        android:layout_below="@+id/name"
        android:background="@drawable/text_field_blue"
        android:ems="10"
        android:hint="John Doe"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/description"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_above="@+id/description_text"
        android:layout_alignStart="@+id/name"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Description:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/description_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/email_text"
        android:layout_marginBottom="17dp"
        android:background="@drawable/text_field_blue"
        android:ems="10"
        android:hint="Lorem ipsum dolor"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_above="@+id/email_text"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Email:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/next_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/text_field_blue"
        android:ems="10"
        android:hint="Email@example.com"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="italic" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:background="@drawable/button_shape"
        android:onClick="onRegisterClick"
        android:text="Register"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>
