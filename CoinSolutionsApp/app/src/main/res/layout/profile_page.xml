<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="salamantex.coinsolutions.ProfilePage">


    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_bitcoin_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Welcome to your profile!\n Please select an action from below:"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_colour"
        android:textSize="20sp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/add_bitcoin_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_ethereum_button"
        android:layout_centerVertical="true"
        android:background="@drawable/button_shape"
        android:onClick="onAddBitcoinCurrencyClick"
        android:text="Add Bitcoin Currency"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_ethereum_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/add_bitcoin_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_shape"
        android:onClick="onAddEthereumCurrencyClick"
        android:text="Add Ethereum Currency"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_transaction_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_ethereum_button"
        android:layout_below="@+id/add_ethereum_button"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape"
        android:onClick="onAddEthereumCurrencyClick"
        android:text="Create Transaction"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>
